<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.AppAuthActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/colorBackground"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        android:paddingLeft="24dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/dsm_app_icon"
            tools:src="@mipmap/ic_launcher"
            android:layout_marginRight="16dp"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/dsm_app_name"
            tools:text="Some App"
            android:textColor="@color/colorTextPrimary"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/dsm_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dsm_extra_title"
            android:text="@string/dsm_app_auth_extra_title"
            android:layout_below="@id/dsm_app_name"
            android:layout_toRightOf="@id/dsm_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/dsm_permissions"
            android:orientation="vertical"
            android:layout_below="@id/dsm_app_icon"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/dsm_btn_ok"
            android:text="@android:string/ok"
            android:textColor="@color/colorAccent"
            android:background="?android:selectableItemBackground"
            android:layout_below="@id/dsm_permissions"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</FrameLayout>
